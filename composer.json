{
    "name": "likesistemas/phpstan-github-reporter",
    "type": "library",
    "description": "Faz uma publicação do php-stan em uma Pull Request do Github.",
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.likesistemas.com.br/"
        }
    ],
    "require": {
        "php": ">=7.3",
        "likesistemas/github-api": "^1.0",
        "phpstan/phpstan": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0 || ^9.0"
    },
    "autoload": {
        "psr-4": {
            "Like\\Phpstan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Like\\Phpstan\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Like Sistemas",
            "email": "dev@likesistemas.com.br",
            "homepage": "https://www.likesistemas.com.br/"
        }
    ],
    "scripts": {
        "fix": "php-cs-fixer fix",
        "fix:ci": "php-cs-fixer fix --dry-run --stop-on-violation",
        "test": "phpunit",
        "analyse": "phpstan analyse",
        "analyse:ci": "phpstan analyse --error-format githubReporter"
    }
}
